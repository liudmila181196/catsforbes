- content_for(:title, "Sign in")

%h1= t('.sign_in')
.alert
  =flash[:danger]
.row
  -#col-md-6.col-md-offset-3
  .span6.offset3
    = form_for(:session, url: sessions_path) do |f|
      = f.label  t('.email')
      = f.text_field :email
      = f.label t('.password')
      = f.password_field :password
      = f.submit t('.sign_in'), class: "btn btn-primary"
    %p.sign_up_link
      = t('.new_user?')
      #{link_to t('.sign_up'), signup_path}